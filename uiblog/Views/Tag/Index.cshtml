@using BlogModels.UiModel
@model Tag_Model
@{
    ViewData["Title"] = @Html.Raw("首页");
    ViewData["Description"] = @Html.Raw($"OdinSam博客所有文章的标签，包含了:{string.Join("、",Model.Tags.Select(t=>t.TagName).ToList())}");
    ViewData["Keywords"] = @Html.Raw($"{string.Join("、",Model.Tags.Select(t=>t.TagName).ToList())},文章标签,博客");
}
@section Styles{
    <link rel="stylesheet" href="/css/index.all.css" />
}
@section Scripts{
    <script src="/js/index.js"></script>
    <script>
        $(function(){
            //Index.init();
        })
    </script>
}
<div style="margin:20px auto;line-height:50px;">
    @{
        foreach(var tag in Model.Tags){
            <span style="margin:0px 10px;"> <a href="/blog/Tag/post/@(tag.Id)"> @Html.Raw(tag.TagName) (@(tag.PostNum)) </a> </span>
        }
    }
</div>